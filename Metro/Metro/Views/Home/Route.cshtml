@model Metro.Models.JourneyInformationViewModel
@Scripts.Render("~/bundles/overview")

@if (Model.Error != null)
{
	@Html.Partial("_Error", Model.Error)
}
@if (Model.Error == null)
{

@Html.Partial("_Alert", Model.Message)
<div>
	<h2>Trip information from @Model.DepartureTitle to @Model.ArrivalTitle</h2>
</div>

<div class="jumbotron" style="background-color: @Model.RouteViewModel.BackgroundColor; color: @Model.RouteViewModel.ForegroundColor">
	<h1 >@Model.NextBusMessage</h1>
	<p class="lead">Other busses coming in @Model.OtherBusTimes minutes.</p>
	<p class="lead">Your trip will take you @Model.TravelTimeMinutes minutes!</p>
</div>
}

@Html.Partial("_StopSubmission", Model.DepartureAndArrivalViewModel)
